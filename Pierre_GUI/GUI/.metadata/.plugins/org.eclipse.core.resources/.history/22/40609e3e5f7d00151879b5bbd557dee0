public class ShowImage extends JPanel {
    BufferedImage  image;
// le constructeur va prendre en paramétré le chemin de l'image exemple :"C:\image.jpg"
// si tu mis les images dans le même dossier tu peut mettre seulement le nom de ficier exemple : image.jpg
  public ShowImage(String chemin_de_l'image) {
    try {
 
  File input = new File(chemin_de_l'image);
      image = ImageIO.read(input);
    } catch (IOException ie) {
      System.out.println("Error:"+ie.getMessage());
    }
  }
 
// cette méthode c'est elle qui va afficher l'image
  public void paint(Graphics g) {
    g.drawImage( image, 0, 0, null);
  }

